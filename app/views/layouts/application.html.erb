<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %></title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  
  <body>
  
    <%= render 'layouts/header' %>
  
    <section>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </section>
    
    <%= render 'layouts/footer' %>
    
    <%= debug(params) if Rails.env.development? %>
    
  </body>
</html>
